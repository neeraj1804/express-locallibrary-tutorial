<%#  views/author_list %>

<% extend('layout', {'title': title}) %>

<h1><%= title %></h1>
<ul>
    <% if(author_list.length > 0){ %>
        <% author_list.forEach(function(author){ %>
            <li>
                <a href="<%= author.url %>"><%= author.name %></a> | (<%= author.formatted_dob %> - <%= author.formatted_dod %>)
            </li>
        <% }); %>
    <% }else{ %>
        <li>
            There are no authors.
        </li>
    <% } %>
</ul>