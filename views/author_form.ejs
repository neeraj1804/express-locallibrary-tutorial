<%# views/author_form %>

<% extend('layout', {'title': title}) %>

<h1><%= title %></h1>
<form method="POST" action="">
    <div class="form-group">
        <label for="first_name">First Name: </label>
        <input id="first_name" class="form-control" type="text" placeholder="First Name" name="first_name" value="<%= typeof author !== 'undefined' ? author.first_name : '' %>" required="true" />
        <label for="family_name">Family Name: </label>
        <input id="family_name" class="form-control" type="text" placeholder="Family Name" name="family_name" value="<%= typeof author !== 'undefined' ? author.family_name : '' %>" required="true" />
    </div>
    <div class="form-group">
        <label for="date_of_birth">Date Of Birth: </label>
        <input id="date_of_birth" class="form-control" type="date" placeholder="dd/mm/yyyy" name="date_of_birth" value="<%= typeof author !== 'undefined' ? author.date_of_birth : '' %>" />
        <label for="date_of_death">Date Of Death: </label>
        <input id="date_of_death" class="form-control" type="date" placeholder="dd/mm/yyyy" name="date_of_death" value="<%= typeof author !== 'undefined' ? author.date_of_death : '' %>" />
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
</form>

<% if(typeof errors !== "undefined" && errors.length > 0){ %>
    <ul>
        <% errors.forEach(function(error){ %>
            <li>
                <%= error.msg %>
            </li>
        <% }); %>
    </ul>
<% } %>