<%# views/bookinstance_detail %>

<% extend('layout', {'title': title}) %>

<h1>ID: <%- bookinstance._id %></h1>
<p>
    <strong>Title: </strong><a href="<%= bookinstance.book.url %>"><%= bookinstance.book.title %></a>
</p>
<p>
    <strong>Imprint: </strong><%= bookinstance.imprint %>
</p>
<p>
    <strong>Status: </strong>
    <% if(bookinstance.status === 'Available'){ %>
        <span class="text-success">Available</span>
    <% }else if(bookinstance.status === 'Maintenance'){ %>
        <span class="text-danger">Maintenance</span>
    <% }else{ %>
        <span class="text-warning"><%= bookinstance.status %></span>
    <% } %>
</p>            
<% if(bookinstance.status !== 'Available'){ %>
    <p><strong>Due Back: </strong> <%= bookinstance.due_date_formatted %></p>
<% } %>